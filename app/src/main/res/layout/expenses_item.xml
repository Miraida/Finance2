<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/expenses_item_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_coffee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/expenses_item_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Кофе"
        android:textColor="#0365C4"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/expenses_item_iv"
        app:layout_constraintTop_toTopOf="@id/expenses_item_iv" />

    <TextView
        android:id="@+id/expenses_item_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="200"
        android:textColor="#0365C4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/expenses_item_text_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
